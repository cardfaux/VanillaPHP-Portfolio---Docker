{
  "name": "portfolio-blog",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:css": "npx tailwindcss -i ./src/tailwind.css -o ./assets/css/main.css --watch",
    "dev:js": "vite",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o ./assets/css/main.css",
    "build:js": "vite build",
    "build": "npm run build:css && npm run build:js",
    "preview": "vite preview"
  },
  "dependencies": {
    "vite": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.12"
  }
}
